<p id="notice"><%= notice %></p>




<div class="container">
    <div class="row">
      <h1 class="col-xs-4">Listing Images</h1>
    </div>

    <div class="row">
      <% @images.each do |image| %>
        <div class="col-xs-3">
            <%if image.imagefiles.first %>

            <%= link_to(image_tag(image.imagefiles.first.image_file_path.thumb.url, :alt =>  "alt text"), image, :class =>"thumbnail")
            %>

            <%else %>
            <a href="#" class="thumbnail">
              <%= image_tag(image.default_url)%>
            </a>
            <%end%>
          <%= link_to image.name, image%>
          <span>By <%= image.author %> </span>
        </div>
      <% end %>
  </div>
</div>